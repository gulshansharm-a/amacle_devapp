<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#ffff"
    android:background="#ffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#0D000000"
        app:cardCornerRadius="50px"
        android:layout_margin="20px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="500px">

            <ProgressBar
                android:id="@+id/ProgrectProgress"
                android:layout_width="0in"
                android:layout_height="0dp"
                android:indeterminate="false"
                android:max="100"
                android:padding="10px"
                android:progress="50"
                android:progressDrawable="@drawable/circle_progress_drawable"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ProjectName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15%"
                android:textSize="60px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ProgrectProgress"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ProgrectProgress" />

            <TextView
                android:id="@+id/ProjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:text="SD campous"
                android:textSize="50px"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 10000"
                android:textColor="@color/logoolor"
                android:textSize="50px"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/ProjectName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ProjectName"
                app:layout_constraintTop_toTopOf="@+id/ProjectName" />

            <TextView

                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:text="Deadline: "
                android:textColor="@color/logoolor"
                android:textSize="50px"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/Budget"
                app:layout_constraintStart_toStartOf="@+id/Budget"
                app:layout_constraintTop_toBottomOf="@+id/Budget" />

            <TextView

                android:id="@+id/cvbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expected: "
                android:textColor="@color/logoolor"
                android:textSize="50px"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/Budget"
                app:layout_constraintStart_toStartOf="@+id/Budget"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView

                android:id="@+id/cvbn12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delay: "
                android:textColor="@color/logoolor"
                android:textSize="50px"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/cvbn"
                app:layout_constraintTop_toBottomOf="@+id/cvbn" />

            <TextView

                android:id="@+id/cvbn12ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next meeting: "
                android:textColor="@color/logoolor"
                android:textSize="50px"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/cvbn12"
                app:layout_constraintTop_toBottomOf="@+id/cvbn12" />

            <TextView

                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 days"
                android:textColor="@color/logoolor"
                android:textSize="40px"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/cvbn12"
                app:layout_constraintEnd_toEndOf="@+id/Delay"
                app:layout_constraintStart_toEndOf="@+id/cvbn12"
                app:layout_constraintTop_toBottomOf="@+id/cvbn" />

            <TextView

                android:id="@+id/NextMeetingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:30 pm 12/12/2023"
                android:textColor="@color/logoolor"
                android:textSize="40px"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/cvbn12ad"
                app:layout_constraintTop_toBottomOf="@+id/cvbn12ad" />


            <TextView

                android:id="@+id/Delay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="2dp"
                android:text="10/12/2003"
                android:textColor="@color/logoolor"
                android:textSize="40px"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/cvbn"
                app:layout_constraintStart_toEndOf="@+id/cvbn"
                app:layout_constraintTop_toTopOf="@+id/cvbn" />


            <TextView

                android:id="@+id/Deadline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="10/12/2003"
                android:textColor="@color/logoolor"
                android:textSize="40px"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/cvbn"
                app:layout_constraintStart_toEndOf="@+id/cvbn"
                app:layout_constraintTop_toTopOf="@+id/textView13" />


            <TextView
                android:id="@+id/ExtraBudget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1000"
                android:textColor="@color/logoolor"
                android:textSize="50px"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/ProjectName"
                app:layout_constraintStart_toEndOf="@+id/Budget"
                app:layout_constraintTop_toTopOf="@+id/ProjectName" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>