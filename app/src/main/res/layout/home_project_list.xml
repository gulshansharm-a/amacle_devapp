<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/parent"
        android:layout_height="250px"
        android:background="#FFFFFF"
        app:cardCornerRadius="75px"
        android:layout_marginStart="30px"
        android:layout_marginTop="10px"
        android:layout_marginEnd="30px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView_home_project_list"
                android:layout_width="250px"
                android:layout_height="match_parent"
                android:layout_margin="30px"
                android:src="@drawable/amacle_transparent_logo"
                app:civ_border_color="@color/logoolor"
                app:civ_border_width="3px"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </de.hdodenhof.circleimageview.CircleImageView>


            <TextView
                android:id="@+id/projectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100px"
                android:layout_marginTop="35px"
                android:fontFamily="@font/poppins_bold"
                android:text="Poultry_app"
                android:textColor="#080815"
                app:layout_constraintStart_toEndOf="@+id/circleImageView_home_project_list"
                app:layout_constraintTop_toTopOf="@+id/circleImageView_home_project_list" />

            <TextView
                android:id="@+id/percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:text="100%"
                android:textColor="#006FFD"
                app:layout_constraintStart_toStartOf="@+id/projectName"
                app:layout_constraintTop_toBottomOf="@+id/projectName" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>